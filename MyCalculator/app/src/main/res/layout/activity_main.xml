<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:weightSum="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:textSize="42sp"
                android:gravity="end"
                android:id="@+id/answer_text_view"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:alpha=".8"
                android:textSize="42sp"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:id="@+id/input_text_view"
                >

            </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="1"
                android:id="@+id/one"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="2"
                android:id="@+id/two"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="3"
                android:id="@+id/three"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="C"
                android:id="@+id/clear"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"
                android:id="@+id/four"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="5"
                android:id="@+id/five"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="6"
                android:id="@+id/six"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="+"
                android:id="@+id/plus"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"
                android:id="@+id/seven"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="8"
                android:id="@+id/eight"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="9"
                android:id="@+id/nine"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="-"
                android:id="@+id/minus"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            >

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="="
                android:id="@+id/eql"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="0"
                android:id="@+id/zero"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="/"
                android:id="@+id/div"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="*"
                android:id="@+id/mul"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                android:textSize="36sp"
                app:cornerRadius="36dp"
                >
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>